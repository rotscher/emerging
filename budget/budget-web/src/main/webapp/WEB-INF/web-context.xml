<bean id="graphDatabaseService" class="org.springframework.data.neo4j.rest.SpringRestGraphDatabase">
    <constructor-arg value="http://localhost:7474/db/data/" index="0"/>
<!-- for running against a server requiring authentication
    <constructor-arg value="username" index="1"/>
    <constructor-arg value="password" index="2"/>
-->
</bean>

<neo4j:config graphDatabaseService="graphDatabaseService" base-package="ch.rotscher.budget.neo4j" />
<!--     <neo4j:config storeDirectory="target/config-test" base-package="ch.rotscher.budget.neo4j" /> -->
    <neo4j:repositories base-package="ch.rotscher.budget.neo4j" />

    <!-- MongoDB -->

    <bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
        <constructor-arg>
            <mongo:db-factory />
        </constructor-arg>
    </bean>

    <mongo:repositories base-package="ch.rotscher.budget.model, ch.rotscher.budget.repository" />
    <context:component-scan base-package="ch.rotscher.budget.controller, ch.rotscher.budget.service" />
    <mvc:annotation-driven />

</beans>
